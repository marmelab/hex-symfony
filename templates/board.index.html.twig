<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Hex Game in Symfony{% endblock %}</title>

    <link href="{{ asset('css/normalize.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/index.css') }}" rel="stylesheet"/>

    {% block stylesheets %}
    {% endblock %}

    <style>
        {% for x in range(0, board.size - 1) %}
        .line{{ x + 1 }} {
            top: {{ 90 * x }}px;
            left: {{ 50 * x }}px;
        }

        {% endfor %}
    </style>

</head>
<body>
{% block body %}

    <form id="board" method="POST" action="/">
        {% for x in range(0, board.size - 1 ) %}
            <div class="row line{{ x + 1 }}">
                {% for y in range(0, board.size - 1) %}

                    {% set class = '' %}
                    {% if board.hasStone1(x, y) %}
                        <input name="{{ x }},{{ y }}" type="hidden" value="{{ x }},{{ y }}">
                        {% set class = 'player_1' %}
                    {% endif %}

                    <button name="{{ x }},{{ y }}"
                            onclick='this.form.submit();'
                            value="{{ x }},{{ y }}"
                            class="hexagon {{ class }}"
                    >
                        &#x2B22;
                    </button>
                {% endfor %}
            </div>
        {% endfor %}
    </form>
{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>

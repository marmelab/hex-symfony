<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Hex Game in Symfony{% endblock %}</title>

    <link href="{{ asset('css/normalize.css') }}" rel="stylesheet"/>
    <link href="{{ asset('css/index.css') }}" rel="stylesheet"/>

    {% block stylesheets %}
    {% endblock %}


</head>
<body>
{% block body %}

    <nav>Navigation</nav>
    <main>
        {% if board is defined %}
            <style>
                {% for x in range(0, board.size - 1) %}
                .line{{ x + 1 }} {
                    top: {{ 90 * x }}px;
                    left: {{ 50 * x }}px;
                }

                {% endfor %}
            </style>

            <form id="board" method="POST" action="/">
                {% for x in range(0, board.size - 1 ) %}
                    <div class="row line{{ x + 1 }}">
                        {% for y in range(0, board.size - 1) %}

                            {% set class = '' %}
                            {% if board.hasStone(x, y) %}
                                <input name="{{ x }},{{ y }}" type="hidden" value="{{ x }},{{ y }}">
                                {% set class = 'player_1' %}
                            {% endif %}

                            <button name="{{ x }},{{ y }}"
                                    onclick='this.form.submit();'
                                    value="{{ x }},{{ y }}"
                                    class="hexagon {{ class }}"
                            >
                                &#x2B22;
                            </button>
                        {% endfor %}
                    </div>
                {% endfor %}
            </form>
        {% endif %}
    </main>

{% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
